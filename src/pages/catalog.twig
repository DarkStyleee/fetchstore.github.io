            <li><a class="catalog__pagination_ul_link" href="#">11</a></li>
            <li><a class="catalog__pagination_ul_link" href="#">12</a></li>   
        </ul>
    </div>
    {% include "./parts/footer.twig" %}
  </div>
  
{% include "./includes/scripts.twig" %}

</body>
</html>